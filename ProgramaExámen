Versión original:

try:
    base = float(input("Ingresa la base del triángulo: "))
    altura = float(input("Ingresa la altura del triángulo: "))

    area = 0.5 * base * altura
    print(f"Área: {area:.2f}")

    if area > 100:
        print("El área es muy grande")
    else:
        print("El área es muy pequeña")

except ValueError:
    print("Entrada no válida. Por favor, ingresa números.")

Versión 2:

import tkinter as tk

def calculate_area():
    try:
        base = float(entry_base.get())
        height = float(entry_height.get())
        area = 0.5 * base * height
        result_label.config(text=f"Area: {area:.2f}")  #Format to 2 decimal places

        if area > 100:
            message_label.config(text="The area is very large")
        else:
            message_label.config(text="The area is very small")
    except ValueError:
        result_label.config(text="Invalid input. Please enter numbers.")
        message_label.config(text="")


root = tk.Tk()
root.title("Triangle Area Calculator")

label_base = tk.Label(root, text="Base:")
label_base.grid(row=0, column=0)
entry_base = tk.Entry(root)
entry_base.grid(row=0, column=1)

label_height = tk.Label(root, text="Height:")
label_height.grid(row=1, column=0)
entry_height = tk.Entry(root)
entry_height.grid(row=1, column=1)

calculate_button = tk.Button(root, text="Calculate Area", command=calculate_area)
calculate_button.grid(row=2, column=0, columnspan=2)

result_label = tk.Label(root, text="")
result_label.grid(row=3, column=0, columnspan=2)

message_label = tk.Label(root, text="") #Label for size message
message_label.grid(row=4, column=0, columnspan=2)

root.mainloop()
